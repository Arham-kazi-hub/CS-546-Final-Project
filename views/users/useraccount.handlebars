<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title>CS546 Final Project</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="./css/style.css">
    <!-- HTML5 shim 和 Respond.js 是为了让 IE8 支持 HTML5 元素和媒体查询（media queries）功能 -->
    <!-- 警告：通过 file:// 协议（就是直接将 html 页面拖拽到浏览器中）访问页面时 Respond.js 不起作用 -->
    <!--[if lt IE 9]>
    <script src="https://cdn.jsdelivr.net/npm/html5shiv@3.7.3/dist/html5shiv.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/respond.js@1.4.2/dest/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <br/>
            <form action="/users/account" method="post">
                <div class="form-group">
                    <label for="username">Your Username:</label>
                    <p> {{username}}</p>
                    <input type="email" class="form-control" id="username" name="username" placeholder="Your new Username">
                    <br>
                    <input type="submit" class="form-control button btn btn-danger" value="Update Username">
                    <br>
                </div>
            </form>
            <div class="SucMsg">
                {{#unless status}}
                <p>{{success1}}</p >
                {{/unless}}
            </div>
            <div class="errorMsg">
                {{#unless status}}
                    <p>{{message1}}</p>
                {{/unless}}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <br/>
            <form action="/users/account" method="post">
                <div class="form-group">
                    <label for="nickname">Your Nickname:</label>
                    <p> {{nickname}}</p>
                    <input type="text" class="form-control" id="nickname" name="nickname" placeholder="Your new Nickname">
                    <br>
                    <input type="submit" class="form-control button btn btn-danger" value="Update Nickname">
                    <br>
                </div>
            </form>
            <div class="SucMsg">
                {{#unless status}}
                <p>{{success2}}</p >
                {{/unless}}
            </div>
            <div class="errorMsg">
                {{#unless status}}
                    <p>{{message2}}</p>
                {{/unless}}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <br/>
            <form action="/users/account" method="post">
                <div class="form-group">
                    <label for="password">New Password:</label><br>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Your new Password">
                    <br>
                    <label for="password">Confirm Password:</label><br>
                    <input type="password" class="form-control" id="Cpassword" name="Cpassword" placeholder="Confirm new Password">
                    <br>
                    <input type="submit" class="form-control button btn btn-danger" value="Update Password">
                </div>
            </form>
            <div class="SucMsg">
                {{#unless status}}
                <p>{{success3}}</p >
                {{/unless}}
            </div>
            <div class="errorMsg">
                {{#unless status}}
                    <p>{{message3}}</p>
                {{/unless}}
            </div>
        </div>
    </div>

    <div class="errorMsg">
        {{#unless status}}
            <p>{{message4}}</p>
        {{/unless}}
    </div>

    <br/>
    <hr/>
    <p><h3>Your Posts:</h3></p>
    <div class="row">
        {{#each post-list}}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src={{this.photoArr.[0]}}>
                    <div class="caption">
                        <h3>{{this.topic}}</h3>
                        <p>{{this.content}}</p>
                            <button type="button" class="btn btn-default" data-toggle="modal" data-target='#{{this._id}}1'>
                                Edit
                            </button>&nbsp;&nbsp;

                            <div class="modal fade" id='{{this._id}}1' tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <form method="post" action="http://localhost:3000/posts/editContent">
                                            <div class="modal-header">
                                                <input hidden="hidden" name="postId" value={{this._id}}>
                                                <label for={{this._id}} class="control-label">Type in new content for this topic:</label>
                                                <textarea name="newContent" class="form-control" rows="7" id={{this._id}}></textarea>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-danger">Save</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <form method="post" action="http://localhost:3000/posts/delete">
<!--                                <input hidden="hidden" name="id" >-->
                                <button type="submit" class="userDeleteButton btn btn-danger" value={{this._id}}>Delete</button>
                            </form>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
<script type="text/javascript">
    let delBtns = document.getElementsByClassName('userDeleteButton');

    for(let i = 0; i < delBtns.length; i++){
        delBtns[i].onclick = function () {
            var xhr = new XMLHttpRequest();
            xhr.open('post', 'http://localhost:3000/posts/delete');
            // xhr.setRequestHeader('Content-Type', 'application/json');
            let thisPostId = this.value;
            console.log(thisPostId);
            // xhr.send(JSON.stringify({postId: thisPostId}));

            xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded')
            let s = `postId=${thisPostId}`;
            xhr.send(s);

            window.location.href = "http://localhost:3000/users/account";
            xhr.onload = function () {//获取服务器端给与客户端的响应数据
                console.log(xhr.responseText);
                console.log(xhr.status);
            }
        }
    }
</script>
</body>
</html>