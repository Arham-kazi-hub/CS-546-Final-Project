<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title>CS546 Final Project</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="./css/style.css">
    <!-- HTML5 shim 和 Respond.js 是为了让 IE8 支持 HTML5 元素和媒体查询（media queries）功能 -->
    <!-- 警告：通过 file:// 协议（就是直接将 html 页面拖拽到浏览器中）访问页面时 Respond.js 不起作用 -->
    <!--[if lt IE 9]>
    <script src="https://cdn.jsdelivr.net/npm/html5shiv@3.7.3/dist/html5shiv.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/respond.js@1.4.2/dest/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <br/>
            <form action="/users/account" method="post">
                <div class="form-group">
                    <label class="noPost" for="username">Your Username:</label>
                    <p class="usercenterName"> {{username}}</p>
                    <input type="email" class="form-control" id="username" name="username" placeholder="Your new Username">
                    <br>
                    <input type="submit" id="upUButton" class="form-control button btn btn-danger" value="Update Username">
                    <br>
                </div>
            </form>
            <div class="rightMsg">
                {{#unless status}}
                <p>{{success1}}</p >
                {{/unless}}
            </div>
            <div class="wrongMsg">
                {{#unless status}}
                    <p>{{message1}}</p>
                {{/unless}}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <br/>
            <form action="/users/account" method="post">
                <div class="form-group">
                    <label class="noPost" for="nickname">Your Nickname:</label>
                    <p class="usercenterName"> {{nickname}}</p>
                    <input type="text" class="form-control" id="nickname" name="nickname" placeholder="Your new Nickname">
                    <br>
                    <input type="submit" id="upNButton" class="form-control button btn btn-danger" value="Update Nickname">
                    <br>
                </div>
            </form>
            <div class="rightMsg">
                {{#unless status}}
                <p>{{success2}}</p >
                {{/unless}}
            </div>
            <div class="wrongMsg">
                {{#unless status}}
                    <p>{{message2}}</p>
                {{/unless}}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <br/>
            <form action="/users/account" method="post">
                <div class="form-group">
                    <label class="noPost" for="password">New Password:</label><br>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Your new Password">
                    <br>
                    <label class="noPost" for="Cpassword">Confirm Password:</label><br>
                    <input type="password" class="form-control" id="Cpassword" name="Cpassword" placeholder="Confirm new Password">
                    <br>
                    <input type="submit" id="upPButton" class="form-control button btn" value="Update Password">
                </div>
            </form>
            <div class="rightMsg">
                {{#unless status}}
                <p>{{success3}}</p >
                {{/unless}}
            </div>
            <div class="wrongMsg">
                {{#unless status}}
                    <p>{{message3}}</p>
                {{/unless}}
            </div>
        </div>
    </div>

    <div class="wrongMsg">
        {{#unless status}}
            <p>{{message4}}</p>
        {{/unless}}
    </div>

    <br/>
    <hr/>
    <p><h3>Your Posts:</h3></p>
    <div class="row">
        <input hidden="hidden" id="position" value="0">
        {{#if post-list}}
        {{#each post-list}}
        <div class="col-sm-4">
            <div class="thumbnail">
                <div class="usercenterPic-container">
                    <img class="usercenterPic" src={{this.photoArr.[0]}}>
                </div>
                <div class="caption">
                    <h3><a href='http://localhost:3000/posts/postInfo/{{this._id}}' class="usercenterTopic">{{this.topic}}</a></h3>
                    <p>{{this.content}}</p>
                    <p class="ButtonContainer">
                        <button class="btn usercenterBu" onmouseover="this.style.backgroundColor='#962618',this.style.color='#FFFFFF'" onmouseout="this.style.backgroundColor='#b52818', this.style.color='#FFFFFF';" data-toggle="modal" data-target='#{{this._id}}1'>
                            Edit
                        </button>&nbsp;&nbsp;
                        <input class="userDeleteButton btn btn-default" type="button" name={{this._id}} value="Delete">

                        <div class="modal fade" id='{{this._id}}1' tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <form method="post" action="http://localhost:3000/posts/editContent">
                                        <div class="modal-header">
                                            <input hidden="hidden" name="postId" value={{this._id}}>
                                            <label for={{this._id}} class="control-label"></label>
                                            <textarea name="newContent" class="form-control" rows="7" id={{this._id}} value={{this.content}} placeholder="Type in new content for this post."></textarea>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-danger">Save</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </p>
                </div>
            </div>
        </div>
            {{/each}}
        {{else}}
            <h3 id="postTip">You don't have any post now!</h3>
        {{/if}}

    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/jquery@1.12.4/dist/jquery.min.js"></script>
<!--<script src="../../public/js/carhartl-jquery-cookie-92b7715"></script>-->
<script type="text/javascript">
    let delBtns = document.getElementsByClassName('userDeleteButton');

    for(let i = 0; i < delBtns.length; i++){
        delBtns[i].onclick = function () {

            $('#position').val(document.documentElement.scrollTop);

            var xhr = new XMLHttpRequest();
            xhr.open('post', 'http://localhost:3000/posts/delete');
            let thisPostId = this.name;
            xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded')
            let s = `postId=${thisPostId}`;
            xhr.send(s);

            xhr.onload = function () {//获取服务器端给与客户端的响应数据
                console.log(xhr.responseText);
                // alert("Succeed!")
                var Timeout = setTimeout(function () {
                    window.location.reload();
                }, 500);
            }
        }
    }

</script>
</body>
</html>
